#!/bin/bash

set -e

cd /opt/

# Create folder
mkdir -p "writerside-eap"

# Move downloaded .tar.gz
mv "writerside-eap.tar.gz" "writerside-eap"

cd "writerside-eap"

# Extract the package
tar -xzf "writerside-eap.tar.gz" --strip-components 1

# Remove the tar.gz package
rm -f "writerside-eap.tar.gz"
