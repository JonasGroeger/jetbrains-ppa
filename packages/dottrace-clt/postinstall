#!/bin/bash

set -e

cd /opt/

# Create folder
mkdir -p "dottrace-clt"

# Move downloaded .tar.gz
mv "JetBrains.dotTrace.CommandLineTools.tar.gz" "dottrace-clt"

cd "dottrace-clt"

# Extract the package
tar -xzf "JetBrains.dotTrace.CommandLineTools.tar.gz"

# Remove the tar.gz package
rm -f "JetBrains.dotTrace.CommandLineTools.tar.gz"
