#!/bin/bash

set -e

cd /opt/

# Create folder
mkdir -p "dotmemory"

# Move downloaded .tar.gz
mv "JetBrains.dotMemory.tar.gz" "dotmemory"

cd "dotmemory"

# Extract the package
tar -xzf "JetBrains.dotMemory.tar.gz" --strip-components 1

# Remove the tar.gz package
rm -f "JetBrains.dotMemory.tar.gz"
