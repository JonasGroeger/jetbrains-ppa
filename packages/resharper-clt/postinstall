#!/bin/bash

set -e

cd /opt/

# Create folder
mkdir -p "resharper-clt"

# Move downloaded .tar.gz
mv "JetBrains.ReSharper.CommandLineTools.tar.gz" "resharper-clt"

cd "resharper-clt"

# Extract the package
tar -xzf "JetBrains.ReSharper.CommandLineTools.tar.gz"

# Remove the tar.gz package
rm -f "JetBrains.ReSharper.CommandLineTools.tar.gz"
