#!/bin/bash

set -e

cd /opt/

# Create folder
mkdir -p "resharper-clt"

# Move downloaded .tar.gz
mv "JetBrains.ReSharper.CommandLineTools.zip" "resharper-clt"

cd "resharper-clt"

# Extract the package
unzip -qu "JetBrains.ReSharper.CommandLineTools.zip"

# Remove the tar.gz package
rm -f "JetBrains.ReSharper.CommandLineTools.zip"
